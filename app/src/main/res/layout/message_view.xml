<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lfirst"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/vmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_messageview"
        android:minWidth="110sp"
        android:paddingBottom="18dp"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="message"
        android:textColor="#000000"
        android:textSize="20sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/vname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="name"
        android:textColor="@color/nameHeader"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vmessage"
        android:layout_alignEnd="@+id/vmessage"
        android:layout_alignRight="@+id/vmessage"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="4dp"
        android:text="00.00.0000, 00:00"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>
